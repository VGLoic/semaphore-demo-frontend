{
  "name": "semaphore-demo-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@semaphore-protocol/group": "^2.0.0",
    "@semaphore-protocol/identity": "^2.0.0",
    "@semaphore-protocol/proof": "^2.1.0",
    "@tanstack/react-location": "^3.7.4",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.43",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "ethers": "^5.6.9",
    "metamask-react": "^2.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-query": "^3.39.1",
    "react-scripts": "^4",
    "typescript": "^4.7.4",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev:css": "tailwindcss -w -i ./styles/globals.css -o ./src/index.css",
    "start": "react-scripts start",
    "dev": "concurrently \"npm run dev:css\" \"npm run start\"",
    "build:css": "tailwindcss -m -i ./styles/globals.css -o src/index.css",
    "build": "npm run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src",
    "format": "prettier src --write",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "eslint": "8.18.0",
    "eslint-config-react-app": "^7.0.1",
    "husky": "^7.0.0",
    "lint-staged": "^12.4.2",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.1.4"
  },
  "lint-staged": {
    "src/**/*": "prettier --write --ignore-unknown",
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint src --max-warnings=0"
    ]
  }
}
